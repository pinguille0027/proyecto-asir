---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("proyecto");
---

<Layout title="Blog del Proyecto" author="Guillermo Orio Fernández & Noelia Sánchez Domínguez">
  <h1>blog del proyecto</h1>
  <ul>
    {allPosts.map((post:any) => <li><a href={`./${post.slug}`}>{post.data.title}</a></li>)}
  </ul>
</Layout>
