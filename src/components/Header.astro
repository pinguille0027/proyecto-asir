---
import Nav from "./Nav.astro"
import Marca from "./Marca.astro"
---

<header id="header">
  <Marca/>
  <Nav/>
</header>
<script>
  function onScroll() {
    const header = document.getElementById("header");
    if (window.scrollY > 0) {
      header?.classList.add("scrolled");
    } else {
      header?.classList.remove("scrolled");
    }
  }

  document.addEventListener("scroll", onScroll);
</script>
<style>
  .scrolled {
    background-color: rgba(var(--fondo), 0.8);
    filter: saturate(1.25);
    -webkit-backdrop-filter: blur(2px) saturate(1.25);
    backdrop-filter: blur(2px);
    border-color: rgba(var(--turquesa), 0.4);
  }
  header {
    padding: 0.5rem 0;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    height: 4rem;
    z-index: 50;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    background-color: rgba(var(--fondo),0.9);
    border-bottom: 1px solid rgba(var(--turquesa), 0.4);
    transition-property: all;
    transition-duration: 0.3s;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  @media(width <= 700px){
    header{
      height: 3rem;
      gap: 1.5rem;
    } 
  }
  
</style>
