generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model comentarios {
  id         Int    @id @default(autoincrement())
  created_at  DateTime  @default(now())
  autor      String?
  contenido  String?
  id_post     String?
  id_ref      Int?
}

model citas {
  id             Int    @id @default(autoincrement())
  created_at      DateTime  @default(now())
  empresa        String?
  nombre         String?
  email          String?
  telefono       Int?
  descripcion    String?
  metodo_contacto String?
  fecha_reunion   DateTime?
  documentacion  String?
}